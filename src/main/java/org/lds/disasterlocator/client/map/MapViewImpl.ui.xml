<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .mapPanel {width: 100%; height: 100%;}
        .topMenu {width: 100%; heigth: 50px;}
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel ui:field="topMenu" styleName="{style.mapPanel}">
            <g:HorizontalPanel>
                <g:Button ui:field="load">Load Data</g:Button>
                <g:Button ui:field="compute">Compute District Members</g:Button>
                 <g:Button ui:field="reports">Reports</g:Button>
                <g:CheckBox ui:field="districtCircle">Show District Circles</g:CheckBox>   
            </g:HorizontalPanel>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="map" styleName="{style.mapPanel}">
            <g:Label>Loadin map api</g:Label>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>