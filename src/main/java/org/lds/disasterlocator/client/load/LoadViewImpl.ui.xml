<!--
Uncomment this for XHTML entities
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
-->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    </ui:style>
    <ui:with field='res' type='org.lds.disasterlocator.client.MyResources'/>

    <g:HTMLPanel ui:field="panel" styleName="{res.style.panel}">
        <g:Button ui:field="map">Go to map</g:Button>
        <g:FormPanel ui:field="form" action="rest/upload" encoding="multipart/form-data" method="POST">
            <g:FlowPanel>
                <g:Label>Select CSV file to upload</g:Label>
                <g:FileUpload ui:field="fileUpload" name="uploadedFile"></g:FileUpload>
                <g:Button ui:field="submit">Upload</g:Button>
            </g:FlowPanel>
        </g:FormPanel>
        <g:Button ui:field="process" visible="false">Process File</g:Button>
        <g:HTMLPanel ui:field="legend" visible="false">
            <g:Grid>
                <g:row>
                    <g:cell>Legend</g:cell>
                </g:row>
                <g:row styleName="{res.style.duplicate}">
                    <g:cell>Duplicate</g:cell>
                </g:row>
                <g:row styleName="{res.style.badAddress}">
                    <g:cell>Invalid address</g:cell>
                </g:row>
                <g:row styleName="{res.style.failed}">
                    <g:cell>Failed to process</g:cell>
                </g:row>
            </g:Grid>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="table"></g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>